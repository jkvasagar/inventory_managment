# Flask Configuration
SECRET_KEY=change-this-to-a-random-secret-key
FLASK_ENV=production

# Google OAuth Configuration
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Database Configuration
# IMPORTANT: For local development, comment out or remove DATABASE_URL to use SQLite automatically
# The app will detect you're running locally and use SQLite by default

# For PostgreSQL (local instance):
# DATABASE_URL=postgresql://username:password@localhost:5432/bakery_db

# For SQLite (automatic fallback for local development):
# No need to set DATABASE_URL - the app will use SQLite automatically when running locally

# For Cloud SQL Proxy (local connection to production DB):
# DATABASE_URL=postgresql://username:password@127.0.0.1:5432/bakery_db
# Note: Run Cloud SQL Proxy first: ./cloud_sql_proxy -instances=PROJECT:REGION:INSTANCE=tcp:5432

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Application Settings
DEBUG=False
MAX_CONTENT_LENGTH=16777216  # 16MB max file upload

# Session Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Security Headers
SEND_FILE_MAX_AGE_DEFAULT=31536000  # 1 year cache for static files

# CORS Settings (if needed)
# CORS_ORIGINS=https://yourdomain.com

# Rate Limiting (if implemented)
# RATELIMIT_STORAGE_URL=redis://localhost:6379
